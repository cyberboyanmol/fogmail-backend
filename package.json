{
  "name": "fogmail-backend",
  "author": "Anmol Gangwar",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node -r  ./tsconfig-paths.js   ./dist/server.js",
    "dev": "cross-env NODE_ENV=development tsx watch ./src/server.ts ",
    "build": "yarn clean &&  tsc ",
    "clean": "rimraf dist/",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint  src/**/*.ts --fix",
    "prisma:generate:dev": "npx prisma generate --schema=./src/infra/prisma/schema.prisma ",
    "prisma:studio:dev": "npx dotenv -e .env.development -- npx prisma studio --schema=./src/infra/prisma/schema.prisma",
    "prisma:migrate:dev": "npx dotenv -e .env.development -- npx prisma migrate dev --schema=./src/infra/prisma/schema.prisma ",
    "prisma:migrate:deploy": "npx  dotenv -e .env.production --npx prisma migrate deploy --schema=./src/infra/prisma/schema.prisma ",
    "prisma:db:reset:dev": "npx dotenv -e .env.production -- npx prisma db push --force-reset && npx prisma db push --schema=./src/infra/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "prisma": "^5.18.0",
    "tsconfig-paths": "^4.2.0",
    "validator": "^13.12.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  }
}
